<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="6.0" style="-fx-background-color: #72946a;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.foreverhomedbmsproject.ApplicationsExplorerController">
    <children>
        <BorderPane prefHeight="600.0" prefWidth="650.0">
            <top>
                <BorderPane prefHeight="50.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                    <left>
                        <Label prefHeight="33.0" prefWidth="182.0" text="Applications" textFill="WHITE" BorderPane.alignment="CENTER">
                            <graphic>
                                <ImageView fitHeight="21.0" fitWidth="103.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../../assets/application.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <font>
                                <Font name="Berlin Sans FB" size="23.0" />
                            </font>
                        </Label>
                    </left>
                    <right>
                        <Button mnemonicParsing="false" styleClass="main-button-style" stylesheets="@../../../styles/fxml.css" text="Generate Report" BorderPane.alignment="CENTER">
                            <graphic>
                                <ImageView fitHeight="17.0" fitWidth="21.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../../assets/report.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </right>
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </BorderPane>
            </top>
            <center>
                <ScrollPane fx:id="scrollPane" prefHeight="486.0" prefWidth="576.0">
                    <content>
                        <VBox fx:id="applicationsContainer" spacing="10.0" />
                    </content>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </ScrollPane>
            </center>
            <bottom>
                <BorderPane prefHeight="64.0" prefWidth="550.0" BorderPane.alignment="CENTER">
                    <left>
                        <Button mnemonicParsing="false" onAction="#showAddApplicationPopup" styleClass="main-button-style" stylesheets="@../../../styles/fxml.css" text="Add an Application" BorderPane.alignment="CENTER">
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../../assets/add.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </left>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" />
                    </padding>
                </BorderPane>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
